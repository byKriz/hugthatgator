---
import Footer from "../components/Footer.astro";
import NavBar from "../components/NavBar.astro";

import grapImg from "../../public/grap-image.jpg";
import HeaderContainer from "../components/HeaderContainer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;

const description =
  "I Wani Hug that Gator! is a choice-driven narrative about teenagers struggling to find their way. Help Inco, loser highschooler extraordinaire, navigate his budding friendships (and romance!) while surviving being the only human in a dinosaur-filled school.";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="robots" content="index, follow" />
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:title" content="I Wani Hug that Gator!" />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={grapImg.src} />
    <meta property="og:image:alt" content="I Wani Hug That Gator - Cover" />

    <title>{title}</title>
  </head>
  <body class="flex flex-col items-center relative">
    <div class="bg-room object-cover w-screen h-screen fixed -z-10"></div>
    <NavBar />
    <HeaderContainer />
    <main
      class="text-white flex flex-col justify-center items-center w-full py-8
    bg-gradient-to-t to-slate-700/75 via-emerald-950/75 from-violet-950/75 backdrop-blur-lg"
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
    background-size: 224px;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  span {
    --tw-text-opacity: 1;
    color: rgb(34 197 94 / var(--tw-text-opacity));
  }
</style>
