---
import MusicItem from "./MusicItem.astro";
import ostCoverA from "../../public/ost_cover_a.webp";
import ostCoverB from "../../public/ost_cover_b.webp";
import SectionContainer from "./SectionContainer.astro";

import { coverALink, coverBLink } from "../consts/musicLinks";

import { getI18N } from "../i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<SectionContainer titles={i18n!.HomePage.MusicSection.Title}>
  <div
    class="w-full grid gap-12 items-start grid-cols-1 lg:px-24 lg:grid-cols-2 
     max-w-[1000px] xl:px-0"
  >
    <MusicItem
      image={ostCoverA}
      htext={i18n!.HomePage.MusicSection.CoverA.htext}
      text={i18n!.HomePage.MusicSection.CoverA.text}
      items={coverALink}
    />
    <MusicItem
      image={ostCoverB}
      htext={i18n!.HomePage.MusicSection.CoverB.htext}
      text={i18n!.HomePage.MusicSection.CoverB.text}
      items={coverBLink}
    />
  </div>
</SectionContainer>

