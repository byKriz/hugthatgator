---
import type { LinkModel } from "../../models/LinkModel";

interface Props extends LinkModel {}

const { name = "link", url = "#", color = "gray" } = Astro.props;
---

<a
  href={url}
  class:list={[
    "text-xl px-4 py-2 rounded-lg font-semibold",
    {
      "bg-gray-700 hover:bg-gray-600": color === "gray",
      "bg-sky-700 hover:bg-sky-600": color === "sky",
      "bg-red-700 hover:bg-red-600": color === "red",
    },
  ]}>{name}</a
>
