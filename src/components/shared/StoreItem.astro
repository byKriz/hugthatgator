---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="flex-1">
  <div class="px-2 bg-purple-900/70 backdrop-blur-sm rounded-t-xl">
    <h4 class="text-white font-bold text-lg">{title}</h4>
  </div>
  <div class="bg-purple-600/70 backdrop-blur-sm rounded-b-xl">
    <slot />
  </div>
</div>
