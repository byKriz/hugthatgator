---
// import ContentContainer from "./ContentContainer.astro";
import SectionContainer from "./SectionContainer.astro";
import StoreButton from "./StoreButton.astro";
import TextContainer from "./TextContainer.astro";
import TrailerVideo from "./TrailerVideo.astro";

import { getI18N } from "../i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<SectionContainer>
  <TrailerVideo />
  <div class="flex flex-col md:flex-row gap-4">
    <StoreButton
      name="Steam"
      link="https://store.steampowered.com/app/1895350/I_Wani_Hug_that_Gator/"
    />
    <StoreButton
      name="Itch.io"
      link="https://cavemanon.itch.io/i-wani-hug-that-gator"
    />
  </div>
  <TextContainer>
    <p set:html={i18n!.HomePage.HeroSection.principalText} />
  </TextContainer>
</SectionContainer>
