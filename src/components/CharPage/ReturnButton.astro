---
import LeftArrowIcon from "../icons/LeftArrowIcon.astro";

const { currentLocale } = Astro;

const cleanReturnLink = () => (currentLocale === "en" ? "/" : "/es");
---

<nav class="w-full py-4">
  <a
    href={cleanReturnLink()}
    class={`flex justify-start items-center w-max gap-1 font-semibold md:text-xl bg-gray-600/70 
    pl-2 pr-4 py-1 rounded-xl hover:bg-gray-600/90 duration-300 ease-in-out`}
  >
    <LeftArrowIcon className="size-4 md:size-6" />
    Home</a
  >
</nav>
